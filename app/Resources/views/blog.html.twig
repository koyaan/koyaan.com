<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="The number one resource for koyaan.com related information">
        <meta name="author" content="Armin Weihbold">
        <title>{% block title %}+koyaan's blog{% endblock %}</title>
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
        {% block stylesheets %}
            {% stylesheets
            '@AppBundle/Resources/public/less/clean-blog.less'
            %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('vendor/font-awesome-4.3.0/css/font-awesome.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('vendor/googlefonts/Lora.css') }}" />
        <link rel="stylesheet" href="{{ asset('vendor/googlefonts/OpenSans.css') }}" />
    </head>
    <body>
        {% block navigation %}
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">koyaan.com</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="{{ path('sonata_news_archive') }}">+koyaan's blog</a>
                        </li>
                        <li>
                            <a href="http://8x8helper.meteor.com">8x8Helper</a>
                        </li>
                        <li>
                            <a href="{{ path('contact') }}">Contact</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>
        {% endblock %}
        {% block header %}
            <header class="intro-header">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                            <div class="site-heading">
                                <h1>Armin's ramblings</h1>
                                <hr class="small">
                                <span class="subheading">clever meta blog subtitle</span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            <!-- Footer -->
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                            <ul class="list-inline text-center">
                                <li>
                                    <a href="https://twitter.com/koyaan5">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://github.com/koyaan">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                                    </a>
                                </li>
                            </ul>
                            <p class="copyright text-muted">Copyright &copy; koyaan.com 2015</p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
